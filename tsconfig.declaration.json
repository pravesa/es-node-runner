// Config for generating type declaration for config.ts only
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",

    "stripInternal": true,
    "removeComments": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types"
  },
  "include": ["src/config.ts"],
  "exclude": ["node_modules"]
}
